
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="text-right mb-3">
                    <a href="{{ path('new_spot') }}" class="btn btn-success">Ajouter un spot</a>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
            
                {% if spot is defined %}
                    <table class="table table-bordered">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">Nom</th>
                                <th scope="col">Localisation</th>
                                <th scope="col">Description</th>
                                <th scope="col">Photo</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for spot in spot %}
                                <tr>
                                    <td>{{ spot.nom }}</td>
                                    <td>{{ spot.localisation }}</td>
                                    <td>{{ spot.description }}</td>
                                    <td>
                                        {# ... Votre code pour la photo ... #}
                                    </td>
                                    <td>
<a href="{{ path('edit_spot', {'id': spot.id}) }}" class="btn btn-secondary btn-sm">Modifier</a>



                                        <form action="{{ path('delete_spot', {'id': spot.id}) }}" method="post" class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce spot ?');">
                                            <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                                        </form>                        
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <p>Aucun spot disponible.</p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
