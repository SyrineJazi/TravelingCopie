{% extends 'admin/media_gallery.html.twig' %}

{% block title %}Modifier Spot{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 20px;
        }

        h1 {
            color: #333;
        }

        form {
            max-width: 400px;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        input[type="text"],
        input[type="submit"],
        button {
            width: 100%;
            padding: 10px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            box-sizing: border-box;
            border-radius: 4px;
        }

        input[type="submit"],
        button {
            background-color: #808080;
            color: white;
            cursor: pointer;
        }

        input[type="submit"]:hover,
        button:hover {
            background-color: #555;
        }

        a {
            display: block;
            margin-top: 10px;
            text-decoration: none;
        }

        button {
            background-color: #808080;
            color: white;
            cursor: pointer;
            padding: 8px;
        }

        button:hover {
            background-color: #555;
        }
    </style>
{% endblock %}

{% block body %}
    <h1>Modifier Spot</h1>
    
    {{ form_start(form) }}
    
    {{ form_row(form.nom) }}
    {{ form_row(form.localisation) }}
    {{ form_row(form.description) }}

    {{ form_end(form) }}
    
    <a href="{{ path('app_spot') }}"><button type="button">Retour</button></a>
{% endblock %}
